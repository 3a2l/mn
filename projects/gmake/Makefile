# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_static
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_static)
  mn_config = debug_static
  unittest_config = debug_static
endif
ifeq ($(config),debug_shared)
  mn_config = debug_shared
  unittest_config = debug_shared
endif
ifeq ($(config),release_static)
  mn_config = release_static
  unittest_config = release_static
endif
ifeq ($(config),release_shared)
  mn_config = release_shared
  unittest_config = release_shared
endif

PROJECTS := mn unittest

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

mn:
ifneq (,$(mn_config))
	@echo "==== Building mn ($(mn_config)) ===="
	@${MAKE} --no-print-directory -C . -f mn.make config=$(mn_config)
endif

unittest: mn
ifneq (,$(unittest_config))
	@echo "==== Building unittest ($(unittest_config)) ===="
	@${MAKE} --no-print-directory -C . -f unittest.make config=$(unittest_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f mn.make clean
	@${MAKE} --no-print-directory -C . -f unittest.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_static"
	@echo "  debug_shared"
	@echo "  release_static"
	@echo "  release_shared"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   mn"
	@echo "   unittest"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"